.search-box {
  height: 80rpx;
  border-radius: 4rpx;
  background-color: #f5f5f5;
  color: #999;
  z-index: 999;
}
.search-box.index {
  background-color: rgba(255, 255, 255, 0.3);
  color: #fff;
}
.search-box .search-input,
.search-box .search-label {
  width: 480rpx;
  font-size: 24rpx;
}
.search-box .search-input {
  color: #333;
}
.search-box.index .search-input {
  font-size: 28rpx;
  color: #fff;
}
.search-box .search-img1 {
  margin-left: 24rpx;
  margin-right: 24rpx;
  width: 39rpx;
  height: 39rpx;
}
.search-box .search-img2 {
  float: right;
  width: 44rpx;
  height: 44rpx;
  margin: 20rpx 24rpx;
}
.search-cancel {
  margin-right: 40rpx;
  font-size: 24rpx;
  color: #666;
}

